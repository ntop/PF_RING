#
# Makefile for both static and dynamic PF_RING user libraries
#
#

#
# Installation directory
#
INSTDIR   = ${DESTDIR}/@INSTALL_PREFIX@

#
# Search directories
#
INCLUDE   = -I../../kernel @BPF_INCLUDE@ @ACCOLADE_INC@ @INVEATECH_INC@

#
# PF_RING ZC
#
PF_RING_ZC_OBJS  = @PF_RING_ZC_OBJS@

#
# DAG
#
DAG_OBJS  = @DAG_OBJS@

#
# NT
#
NT_OBJS  = @NT_OBJS@

#
# Mellanox (MLX)
#
MLX_OBJS  = @MLX_OBJS@

#
# Accolade
#
ACCOLADE_OBJS  = @ACCOLADE_OBJS@

#
# Myricom
#
MYRICOM_OBJS  = @MYRICOM_OBJS@

#
# Invea-Tech
#
INVEATECH_OBJS  = @INVEATECH_OBJS@

#
# Exablaze
#
EXABLAZE_OBJS  = @EXABLAZE_OBJS@

#
# Fast_BPF
#
FASTBPF_HOME = ../fast_bpf
FASTBPF_HDR = ${FASTBPF_HOME}/fast_bpf.h
FASTBPF_LIB = ${FASTBPF_HOME}/libfastbpf.a
FASTBPF_OBJS = `ar t ${FASTBPF_LIB} | grep -F .o | tr '\n' ' '`

#
# Object files
#
OBJS      = pfring.o pfring_mod.o pfring_utils.o pfring_mod_stack.o pfring_hw_filtering.o \
	    pfring_hw_timestamp.o pfring_mod_sysdig.o ${PF_RING_ZC_OBJS} ${DAG_OBJS} ${NT_OBJS} ${MLX_OBJS} ${ACCOLADE_OBJS} ${MYRICOM_OBJS} ${INVEATECH_OBJS} ${EXABLAZE_OBJS}

#
# C compiler and flags
#
#
# CROSS_COMPILE=arm-mv5sft-linux-gnueabi-
#
CC        = ${CROSS_COMPILE}gcc
CFLAGS    = @CFLAGS@ -Wall -fPIC ${INCLUDE} @HAVE_PF_RING_ZC@ @HAVE_DAG@ @HAVE_ACCOLADE@ @HAVE_MYRICOM@ @HAVE_INVEATECH@ @HAVE_EXABLAZE@ @HAVE_BPF@ @HAVE_REDIRECTOR@ @HAVE_HW_TIMESTAMP@ @HAVE_NT@ @HAVE_MLX@ -O2 # -g
LDFLAGS   = -g -shared
SYSLIBS   = -lpthread @SYSLIBS@ @NT_LIB@ @ACCOLADE_LIB@ @MYRICOM_LIB@ @INVEATECH_LIB@ @EXABLAZE_LIB@ @REDIRECTOR_LIB@

# How to make an object file
%.o: %.c %.h Makefile
#	@echo "=*= making object $@ =*="
	${CC} ${CFLAGS} -c $< -o $@

#
# Main targets
#
STATICLIB  = libpfring.a
DYNAMICLIB = libpfring.so
TARGETS    = ${STATICLIB} ${DYNAMICLIB}
RING_H     = ../../kernel/linux/pf_ring.h

all: ${TARGETS}

${STATICLIB}: Makefile extract_fast_bpf @PF_RING_ZC_DEP@ @NT_DEP@ @MYRICOM_DEP@ ${OBJS} pfring.h ${RING_H}
	@echo "=*= making library $@ =*="
	ar rs $@ ${OBJS} ${FASTBPF_OBJS}
	ranlib $@

${DYNAMICLIB}: ${OBJS} extract_fast_bpf @PF_RING_ZC_DEP@ @NT_DEP@ @MYRICOM_DEP@ pfring.h ${RING_H} Makefile
	@echo "=*= making library $@ =*="
	${CC} ${LDFLAGS} ${OBJS} ${FASTBPF_OBJS} ${SYSLIBS} -o $@

extract_pfring_zc_lib:
	ar x @PF_RING_ZC_LIB@

extract_myricom_lib:
	ar x @MOD_MYRICOM_LIB@

extract_nt_lib:
	ar x @MOD_NT_LIB@

extract_fast_bpf: ${FASTBPF_LIB}
	ar x ${FASTBPF_LIB}
	cp ${FASTBPF_HDR} .

${FASTBPF_LIB}:
	cd ../fast_bpf; make

install: install-static install-shared

install-includes:
	mkdir -p ${INSTDIR}/include
	cp pfring.h pfring_mod_sysdig.h @PF_RING_ZC_H@ ${FASTBPF_HDR} ${INSTDIR}/include/

install-static: ${STATICLIB} install-includes
	mkdir -p ${INSTDIR}/lib
	cp ${STATICLIB} ${INSTDIR}/lib/

install-shared:	${DYNAMICLIB} install-includes
	mkdir -p ${INSTDIR}/lib
	cp ${DYNAMICLIB} ${INSTDIR}/lib/
	@if test "$(USER)" = "root"; then \
		ldconfig; \
	fi

clean:
	@rm -f ${TARGETS} *.o *~
